{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resource Set",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the resource set."
    },
    "description": {
      "type": "string",
      "description": "Details about the resource set."
    },
    "version": {
      "type": "string",
      "description": "The version of Saturn Cloud used when creating the resource set."
    },
    "resources": {
      "type": "array",
      "description": "List of resources to be included in this set.",
      "items": [
        {
          "$ref": "/resources/schema.json"
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "resources"
  ]
}
